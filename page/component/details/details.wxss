@import '../../common/common.wxss';


.goods-box{
    width: 100%;
    /* height: 1000rpx; */
    position: relative;
    text-align: center;
    color: #454552;
    border-bottom: 30rpx solid #ededed;
}
.goods-box .goods-thumb{
    width: 100%;
    height: 600rpx;
}

.to-carts-icon{
    opacity: 50%;
    position: absolute;
    right: 70rpx;
    top: 70rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    opacity: .6;
    -webkit-animation: to_cart .3s ease-out;
    animation: to_cart .3s ease-out;
}
@-webkit-keyframes to_cart {
    0%{
        right:100rpx;
        top:530rpx;
        -webkit-transform: scale(4);
    }
    60%{
        top: 20rpx;
    }
}
@keyframes to_cart {
    0%{
        right:100rpx;
        top:530rpx;
        transform: scale(4);
    }
    60%{
        top: 20rpx;
    }
}

/* 阴影 */
.carts-icon{
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    width: 65rpx;
    height: 65rpx;
    background: rgba(51, 51, 51, 50%);
    border-radius: 50%;
}
.carts-icon image{
    width: 80%;
    height: 80%;
}
.carts-icon.on{
    -webkit-animation: to_cart_scale .3s ease;
    animation: to_cart_scale .3s ease;
}
@-webkit-keyframes to_cart_scale {
    50%{
        -webkit-transform: scale(1.2);
    }
}
@keyframes to_cart_scale {
    50%{
        transform: scale(1.2);
    }
}
/* 加购的数量 */
.carts-icon-num{
    position: absolute;
    left: -15rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 50%;
    background: #fff;
    color: red;
    font-size: 24rpx;
}
/* 加购 */
.goods-box .goods-operation{
    position: relative;
    width: 90%;
    height: 100rpx;
    line-height: 100rpx;
    margin:35rpx 0 60rpx;
    box-sizing: border-box;
    border-radius: 50rpx;
    background: rgb(231, 140, 160);
    color: #634f4f ;
    font-size: 28rpx;
}
.goods-operation text{
    display: inline-block;
    height: 100rpx;
}
.goods-operation-num{
    width: 160rpx;
}
.goods-operation-add{
    width: 80rpx;
    margin-right: 30rpx;
}
.goods-to-cart{
    width: 210rpx;
    padding-right: 75rpx;
}
.goods-cart-img{
    position: absolute;
    right: 50rpx;
    top: 28rpx;
    width: 45rpx;
    height: 45rpx;
}

.goods-stock{
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
.title{
    width: 100%;
    clear: both;
}
.goods-title{
    width: 70%;
    font-size: 30rpx;
    margin-bottom: 40rpx;
    height: 60rpx;
    float: left;
}
.goods-price{
    font-size: 40rpx;
    color: red;
}
.good-price span{
    font-size: 25rpx;
}
.goods-tab-nav{
    display: inline-block;
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}
.goods-tab-nav.on{
    color: #bcaa8a;
    border-bottom: 5rpx solid #bcaa8a;
}
.goods-content{
    padding: 40rpx;
}